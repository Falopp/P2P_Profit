# ===============================================
# P2P Profit Backend - Variables de Entorno
# ===============================================

# Configuración del entorno
ENVIRONMENT=development

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# Base de datos PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/p2p_profit
DATABASE_ECHO=false

# Seguridad y autenticación
SECRET_KEY=your-secret-key-change-in-production-super-secure-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (orígenes permitidos separados por coma)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Configuración P2P
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,UYU

# Comisiones de exchanges
BINANCE_FEE_USD=0.0028
BINANCE_FEE_UYU=0.0016

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Configuración de reportes
MAX_TRANSACTIONS_PER_REPORT=10000
REPORT_CACHE_MINUTES=15

# API Configuration
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc 