# Configuración de entorno para P2P Profit API
# Copia este archivo a .env y ajusta los valores según tu entorno

# Entorno de la aplicación (development, production, testing)
ENVIRONMENT=development

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# Base de datos PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/p2p_profit
DATABASE_ECHO=false

# Seguridad JWT
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Orígenes permitidos (separados por comas)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO

# Configuración P2P específica
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,UYU

# Comisiones de exchanges
BINANCE_FEE_USD=0.0028
BINANCE_FEE_UYU=0.0016

# Configuración de backups
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Configuración de reportes
MAX_TRANSACTIONS_PER_REPORT=10000
REPORT_CACHE_MINUTES=15

# URLs de documentación (set to null in production)
DOCS_URL=/docs
REDOC_URL=/redoc 